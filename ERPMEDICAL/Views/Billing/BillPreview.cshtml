            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.Package</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.Qty</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.BaseValue</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.BaseValue</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.Discount</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.BaseValue</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">ss</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.CgstPercentage</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.Cgst</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.SgstPercentage</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.Sgst</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.IgstPercentage</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.Igst</td>
            <td style="border: 1px solid #000000; padding: 7px; font-size: 13px;">@bill.Amount</td>
        </tr>
    }


