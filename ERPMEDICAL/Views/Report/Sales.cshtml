
@{
    ViewData["Title"] = "Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style{
    <link href="~/css/SalesReport.css" rel="stylesheet" />
}
<h2>Sales Report</h2>
<section class="app-contaner">
    <div class="panel">
        <div class="advance-filter">
            <div id="invoiceNo">
                <label>Invoice No</label>
                <select class="form-control" id="txtfilterInvoiceNo">
                    <option>Inv 1</option>
                    <option>Inv 2</option>
                </select>
            </div>
            <div id="invoiceFromDate">
                <label>Invoice From Date</label>
                <input type="text" id="txtfilterInvoiceFromDate" class="form-control" />
            </div>
            <div id="invoiceToDate">
                <label>Invoice To Date</label>
                <input type="text" id="txtfilterInvoiceToDate" class="form-control" />
            </div>
        </div>
    </div>
    <div class="panel">
        <div class="advance-filter">
            <div id="invoiceFromDate">
                <label>Invoice From Month</label>
                <select class="form-control" id="txtfilterFromMonth">
                    <option>Jan</option>
                    <option>Feb</option>
                    <option>Mar</option>
                    <option>April</option>
                    <option>May</option>
                    <option>June</option>
                    <option>Jully</option>
                    <option>Aug</option>
                    <option>Sep</option>
                    <option>Oct</option>
                    <option>Nov</option>
                    <option>Dec</option>
                </select>
            </div>
            <div id="invoiceToDate">
                <label>Invoice To Month</label>
                <select class="form-control" id="txtfilterToMonth">
                    <option>Jan</option>
                    <option>Feb</option>
                    <option>Mar</option>
                    <option>April</option>
                    <option>May</option>
                    <option>June</option>
                    <option>Jully</option>
                    <option>Aug</option>
                    <option>Sep</option>
                    <option>Oct</option>
                    <option>Nov</option>
                    <option>Dec</option>
                </select>
            </div>
        </div>
    </div>
    <div class="panel">
        <div class="advance-filter">
            <div id="invoiceFromDate">
                <label>Invoice From Year</label>
                <select class="form-control" id="txtfilterInvoiceFromYear">
                    <option>2020</option>
                    <option>2019</option>
                    <option>2018</option>
                    <option>2017</option>
                    <option>2016</option>
                    <option>2015</option>
                    <option>2014</option>
                    <option>2013</option>
                    <option>2012</option>
                    <option>2011</option>
                    <option>2010</option>
                    <option>2009</option>
                </select>
                @*<input type="text" id="txtfilterInvoiceFromYear" class="form-control" />*@
            </div>
            <div id="invoiceToDate">
                <label>Invoice To Year</label>
                <select class="form-control" id="txtfilterInvoiceToYear">
                    <option>2020</option>
                    <option>2019</option>
                    <option>2018</option>
                    <option>2017</option>
                    <option>2016</option>
                    <option>2015</option>
                    <option>2014</option>
                    <option>2013</option>
                    <option>2012</option>
                    <option>2011</option>
                    <option>2010</option>
                    <option>2009</option>
                </select>
                @*<input type="text" id="txtfilterInvoiceToYear" class="form-control" />*@
            </div>
        </div>
    </div>
    <div id="filterTable">
        <h4>Filter Data</h4>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>@@mdo</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>@@fat</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Larry</td>
                    <td>the Bird</td>
                    <td>@@twitter</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="reportLowerTable">
        <h4>Reporting Data</h4>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Total CGST</th>
                    <th scope="col">Total SGST</th>
                    <th scope="col">Total IGST</th>
                    <th scope="col">Total Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>500</td>
                    <td>600</td>
                    <td>0</td>
                    <td>1100</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>

@section scripts {

    <script type="text/javascript">
        $("#txtfilterInvoiceFromDate").datepicker();
        $("#txtfilterInvoiceToDate").datepicker();
        //$("#txtfilterInvoiceFromYear").datepicker();
        //$("#txtfilterInvoiceToYear").datepicker();
    </script>
}