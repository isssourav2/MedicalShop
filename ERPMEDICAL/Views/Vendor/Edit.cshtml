
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="panel" id="app-container">
    <form class="form-horizontal form-bordered">
        <div class="form-group">
            <label class="col-md-3 control-label" for="txtVendorName">Vendor Name</label>
            <div class="col-md-4">
                <input type="text"
                       class="form-control "
                       id="txtVendorName"
                       name="name"
                       autocomplete="off"
                     v-model="vendor.name">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label" for="txtVendorEmail">Vendor Email</label>
            <div class="col-md-4">
                <input type="text"
                       class="form-control "
                       id="txtVendorEmail"
                       name="email"
                       autocomplete="off"
                        v-model="vendor.email">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label" for="txtMobileNo">Vendor Mobile Number</label>
            <div class="col-md-4">
                <input type="text"
                       class="form-control "
                       id="txtMobileNo"
                       name="mobileNo"
                       autocomplete="off"
                        v-model="vendor.mobileNo">
            </div>
        </div>
       
        <div class="form-group">
            <label class="col-md-3 control-label" for="txtAddress">Address</label>
            <div class="col-md-4">
                <textarea rows="5"
                          cols="7"
                          class="form-control"
                          id="txtAddress"
                          name="Address"
                          :value="vendor.address"
                          v-model="vendor.Address">
            </textarea>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-md-3 control-label" for="txtgstNo">GST NUmber</label>
            <div class="col-md-4">
                <input type="text"
                       class="form-control "
                       id="txtgstNo"
                       name="gstNo"
                       autocomplete="off"
                       v-model="vendor.gstNo">
            </div>
        </div>
       
        <div class="form-group">
            <label class="col-md-3 control-label" for="ddlCompany">Company</label>
            <div class="col-md-4">
                <select class="form-control info" id="ddlCompany" v-model="vendor.companyId">
                    <option v-for="company in companies" v-bind:value="company.id">
                        {{company.name}}
                    </option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3"></div>
            <div class="col-md-4">
                <button type="button" class="btn btn-primary" v-on:click="onUpdate">Save changes</button>
                <button type="button" class="btn btn-default">Close</button>
            </div>
        </div>
    </form>
</section>
@section scripts {
    <script src="~/Custom-Script/vendor.js"></script>
}


