
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="app-container">
    <div class="col-md-12">
        <div data-collapsed="0" class="panel">

            <div class="panel-heading">
                <div class="panel-title">
                    <div class="panel-actions">
                    </div>
                    <h2 class="panel-title">EDIT VENDOR</h2>
                </div>
            </div>

            <form>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <label>Full Name <span style="color:red">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   id="txtVendorName"
                                   name="txtVendorName"
                                   placeholder="Enter vendor name"
                                   autocomplete="off"
                                   v-model="vendor.name" />
                        </div>
                        <div class="col-md-4 form-group">
                            <label>Email Address</label>
                            <input type="text"
                                   class="form-control "
                                   id="txtVendorEmail"
                                   name="txtVendorEmail"
                                   placeholder="Enter email address"
                                   autocomplete="off"
                                   v-model="vendor.email" />
                        </div>
                        <div class="col-md-4 form-group">
                            <label>Mobile No.</label>
                            <input type="text"
                                   class="form-control "
                                   id="txtMobileNo"
                                   name="txtMobileNo"
                                   placeholder="Enter mobile no."
                                   autocomplete="off"
                                   v-model="vendor.mobileNo" />
                        </div>

                        <div class="col-md-6 form-group">
                            <label>Full Address</label>
                            <input type="text"
                                   class="form-control"
                                   id="txtAddress"
                                   placeholder="Enter address"
                                   name="txtAddress"
                                   v-model="vendor.address" />
                        </div>

                        <div class="col-md-3 form-group">
                            <label>GST No.</label>
                            <input type="text"
                                   class="form-control "
                                   id="txtgstNo"
                                   name="txtgstNo"
                                   placeholder="Enter GST no."
                                   autocomplete="off"
                                   v-model="vendor.gstNo" />
                        </div>

                        <div class="col-md-3 form-group">
                            <label>Company Name</label>
                            <select class="form-control info" id="ddlCompany" v-model="vendor.companyId">
                                <option v-for="company in companies" v-bind:value="company.id">
                                    {{company.name}}
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" v-on:click="onUpdate">Update</button>
                            <button type="button" class="mb-xs mt-xs mr-xs btn btn-lg btn-default" onclick="window.location.href='@Url.Action("Vendor", "Puchase")'">Back</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Custom-Script/vendor.js"></script>
}


