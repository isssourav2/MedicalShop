
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="panel" id="app-container">
    <form class="form-horizontal form-bordered">
        <div class="form-group">
            <label class="col-md-3 control-label" for="txtVendorName">Vendor Name</label>
            <div class="col-md-4">
                <input type="text"
                       class="form-control "
                       id="txtVendorName"
                       name="name"
                       autocomplete="off"
                       v-on:input="handleChange($event)">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label" for="txtVendorEmail">Vendor Email</label>
            <div class="col-md-4">
                <input type="text"
                       class="form-control "
                       id="txtVendorEmail"
                       name="email"
                       autocomplete="off"
                       v-on:input="handleChange($event)">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label" for="txtMobileNo">Vendor Mobile Number</label>
            <div class="col-md-4">
                <input type="text"
                       class="form-control "
                       id="txtMobileNo"
                       name="mobileNo"
                       autocomplete="off"
                       v-on:input="handleChange($event)">
            </div>
        </div>
   
        <div class="form-group">
            <label class="col-md-3 control-label" for="txtAddress">Address</label>
            <div class="col-md-4">
                <textarea rows="5"
                          cols="7"
                          class="form-control"
                          id="txtAddress"
                          name="Address"
                          v-on:input="handleChange($event)">
            </textarea>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-md-3 control-label" for="txtgstNo">GST NUmber</label>
            <div class="col-md-4">
                <input type="text"
                       class="form-control "
                       id="txtgstNo"
                       name="gstNo"
                       autocomplete="off"
                       v-on:input="handleChange($event)">
            </div>
        </div>
     
        <div class="form-group">
            <label class="col-md-3 control-label" for="txtVendorName">Company</label>
            <div class="col-md-4">
                <select class="form-control info" id="ddlCompany" v-model="vendor.companyId">
                    <option v-for="company in companies" v-bind:value="company.id">
                        {{company.name}}
                    </option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3"></div>
            <div class="col-md-4">
                <button type="button" class="btn btn-primary" v-on:click="onSubmit">Save changes</button>
                <button type="button" class="btn btn-default" v-on:click="clearControl()">Close</button>
            </div>
        </div>
    </form>
    </section>
    @section scripts {
        <script src="~/Custom-Script/vendor.js"></script>
    }
