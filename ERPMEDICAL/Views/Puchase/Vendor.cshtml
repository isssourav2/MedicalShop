
@{
    ViewData["Title"] = "Vendor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- start: page -->
<section class="panel" id="app-container">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
            <a href="#" class="fa fa-times"></a>
        </div>
        <h2 class="panel-title">VENDOR LIST</h2>
    </header>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-6">
                <div class="mb-md">
                    @*<button id="addToTable" class="btn btn-primary">Add <i class="fa fa-plus"></i></button>*@
                    @Html.ActionLink("Create New", "Create", "Vendor",null,new { @class= "btn btn-primary" })
                </div>
            </div>
        </div>
        <table class="table table-bordered table-striped mb-none" id="datatable-editable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile Number</th>
                    <th>Address</th>
                    <th>GST Number</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr class="gradeX" v-for="(item, index) in vendors">
                    <td>{{item.name}}</td>
                    <td>
                        {{item.email}}
                    </td>
                    <td>{{item.mobileNo}}</td>
                    <td>{{item.address}}</td>
                    <td>{{item.gstNo}}</td>
                    <td><a href="javascript:void(0)" class="on-default edit-row" v-on:click="onEdit(item)"><i class="fa fa-pencil"></i></a></td>
                    <td><a href="javascript:void(0)" class="on-default remove-row" v-on:click="onDelete(item)"><i class="fa fa-trash-o"></i></a></td>          
                </tr>
            </tbody>
        </table>
    </div>
    

</section>
<!-- end: page -->
@section scripts {
    <script src="~/Custom-Script/vendor.js"></script>
}